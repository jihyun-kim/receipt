doctype html
mixin nationDropDownList(label, id, array)
  label(for=id) #{label}
   select(name=id placeholder=placeholder id=id)
    each val, index in array
      option(value="#{val.nationcd}") #{val.kname}

html
  head
    title Insert Page
  body
    h1 Insert Page
    hr
    form(method='post')
      fieldset
        legend INSERT DATA
        table
          tr
            td
              label 등록번호
            td
              input(type='text', name='idno')
          tr
            td
              label 등록번호구분
            td
              input(type='text', name='idnogubun')
          tr
            td
              label 접수일자
            td
              input(type='text', name='indate')
          tr
            td
              label 성명
            td
              input(type='text', name='name')
          tr
            td
              label 주민번호A
            td
              input(type='text', name='juminA')
          tr
            td
              label 주민번호B
            td
              input(type='text', name='juminB')
          tr
            td
              label 국가코드
            td
              +nationDropDownList('','nationcd', nations )
          tr
            td
              label 주소
            td
              input(type='text', name='address')
          tr
            td
              label 전화번호
            td
              input(type='text', name='telno')
          tr
            td
              label 메모
            td
              input(type='text', name='memo')
        input(type='submit')


