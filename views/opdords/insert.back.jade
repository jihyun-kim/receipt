    script(src='/js/postrequest2.js')
    script(src='/js/jquery.layout.js')
    script(src='/js/listbox.js')

    
    script.
      $(document).ready(function () {
        $('body').layout({ 
          applyDefaultStyles: true
          , east__size:      "250" // 오른편 영역(pane) 사이즈 재정의
          , west__size:      "550" // 오른편 영역(pane) 사이즈 재정의
          , north__size:     "100" // 오른편 영역(pane) 사이즈 재정의
          });
      });

