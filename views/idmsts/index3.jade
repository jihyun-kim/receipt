doctype html

html
  head
    title 환자기본 개별 조회
    script.
      // FUNCTION findFun()
      function findFun() {
        var x = document.getElementById("myValue").value;
        //alert(x);
        window.location =  '/idmsts/index3/' + x;
        document.getElementById("myValue").value = x;
      }

      // enter event
      function onKeyDown() {
        if (window.event.keyCode == 13) {
          // 엔터키가 눌렸을 때 실행할 내용
          findFun();
          }
      };

   body 
    h1 환자기본 개별 조회
    //a(href='/idmsts/insert') INSERT DATA
    input#myValue(onKeyDown='onKeyDown()', type='text')
    button(onclick='findFun()') 확인
    hr
    table(width='100%', border='1')
      thead
      tbody
        tr
          th 등록번호
          th 등록번호구분
          th 접수일자
          th 성명
          th 주민번호A
          th 주민번호B
          th 국가코드
          th 주소
          th 전화번호
          th 메모
        each item, index in data
          tr
            td= item.idno
            td= item.idnogubun
            td= item.indate
            td= item.name
            td= item.juminA
            td= item.juminB
            td= item.nationcd
            td= item.address
            td= item.telno
            td= item.memo
            td
              a(href='/idmsts/delete/#{item.idno}') DELETE
            td
              a(href='/idmsts/edit/#{item.idno}') EDIT
