            #getResultDiv2
              ul.list-group



    .ui-layout-south South
  
    .ui-layout-center
      .container
        .col-sm-4
          h3 외래접수
          div
            form#userForm
              .form-group
                label(for='indo') 등록번호:
                input#idno.form-control(type='text', name='idno', placeholder='등록번호')
