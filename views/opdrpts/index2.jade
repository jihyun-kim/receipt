doctype html

html
  head
    title 외래접수 부분조회
    script.
      function liftFun() {
        var x = document.getElementById("myValue").value;
        var t = Number(x);
        t = t - 25;
        window.location =  '/opdrpts/index2/' + '25&' + String(t);
        document.getElementById("myValue").value = t;
      }

      function rightFun() {
        var x = document.getElementById("myValue").value;
        var t = Number(x);
        t = t + 25;
        window.location =  '/opdrpts/index2/' + '25&' + String(t);
        document.getElementById("myValue").value = t;
      }
   body 
    h1 외래접수 부분조회
    a(href='/opdrpts/insert') INSERT DATA
    input#myValue(type='number',value=page)
    button(onclick='liftFun()') LIFT
    button(onclick='rightFun()') RIGHT
    hr
    table(width='100%', border='1')
      thead
      tbody
        tr
          th 등록번호
          th 접수일자
          th 진료과
          th 오더
          th 상태
          th 구분
        each item, index in data
          tr
            td= item.idno
            td= item.indate
            td= item.depts
            td= JSON.stringify(item.ords)
            td= item.status
            td= item.gubun
