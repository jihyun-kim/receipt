doctype html
mixin nationDropDownList2(label, id, id2, array)
  label(for=id) #{label}
   select(name=id placeholder=placeholder id=id)
    option(selected='') #{id2}
    each val, index in array
      option(value="#{val.nationcd}") #{val.kname}

html
  head
    title Edit Page
  body
    h1 Edit Page
    hr
    form(method='post')
      fieldset
        legend Edit Data
        table
          tr
            td
              label 등록번호
            td
              input(type='text', name='idno', value='#{data.idno}', disabled='')
          tr
            td
              label 등록번호구분
            td
              input(type='text', name='idnogubun', value='#{data.idnogubun}')
          tr
            td
              label 접수일자
            td
              input(type='text', name='indate', value='#{data.indate}')
          tr
            td
              label 성명
            td
              input(type='text', name='name', value='#{data.name}')
          tr
            td
              label 주민번호A
            td
              input(type='text', name='juminA', value='#{data.juminA}')
          tr
            td
              label 주민번호B
            td
              input(type='text', name='juminB', value='#{data.juminB}')
          tr
            td
              label 국가코드
            td
              +nationDropDownList2('','nationcd', data.nationcd, nations )
              //input(type='text', name='nationcd', value='#{data.nationcd}')
          tr
            td
              label 주소
            td
              input(type='text', name='address', value='#{data.address}')
          tr
            td
              label 전화번호
            td
              input(type='text', name='telno', value='#{data.telno}')
          tr
            td
              label 메모
            td
              input(type='text', name='memo', value='#{data.memo}')
        input(type='submit')
