doctype html
mixin nationDropDownList2(label, id, id2, array)
  label(for=id) #{label}
   select(name=id placeholder=placeholder id=id)
    option(selected='') #{id2}
    each val, index in array
      option(value="#{val.nationcd}") #{val.kname}

mixin deptDropDownList2(label, id, id2, array)
  label(for=id) #{label}
   select(name=id placeholder=placeholder id=id)
    option(selected='') #{id2}
    each val, index in array
      option(value="#{val.deptcd}") #{val.kname}

html
  head
    title Edit Page
  body
    h1 Edit Page
    hr
    form(method='post')
      fieldset
        legend Edit Data
        table
          tr
            td
              label 등록번호
            td
              input(type='text', name='idno', value='#{data.idno}', disabled='')
          tr
            td
              label 접수일자
            td
              input(type='text', name='indate', value='#{data.indate}')
          tr
            td
              label 성명
            td
              input(type='text', name='kname', value='#{data.kname}')
          tr
            td
              label 성별
            td
              input(type='text', name='gender', value='#{data.gender}')
          tr
            td
              label 연령
            td
              input(type='text', name='age', value='#{data.age}')
          tr
            td
              label 구분
            td
              input(type='text', name='gubun', value='#{data.gubun}')
          tr
            td
              label 진료과
            td
              +deptDropDownList2('','deptcd', data.deptcd, depts )
              //input(type='text', name='deptcd', value='#{data.deptcd}')
          tr
            td
              label 국가코드
            td
              +nationDropDownList2('','nationcd', data.nationcd, nations )
              //input(type='text', name='nationcd', value='#{data.nationcd}')
          tr
            td
              label 주민번호
            td
              input(type='text', name='jumin', value='#{data.jumin}')
          tr
            td
              label 주소
            td
              input(type='text', name='addres', value='#{data.address}')
          tr
            td
              label 전화번호
            td
              input(type='text', name='telno', value='#{data.telno}')
        input(type='submit')
